= form_for(@customer) do |f| 
  - if @customer.errors.any? 
    %div{:id => "error_explanation"}
      %h2
        = pluralize(@customer.errors.count, "error")  
        prohibited this customer from being saved:

      %ul
        - @customer.errors.full_messages.each do |msg| 
          %li
            = msg 

  %div{:class => "field"}
    = f.label :name 
    %br
    = f.text_field :name 
  %div{:class => "actions"}
    = f.submit 
