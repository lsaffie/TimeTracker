!!! XML
!!! strict
%html
  %head
    %title
      TimeTracker
    =stylesheet_link_tag 'styles'
    =stylesheet_link_tag 'print', :media => "print"

    =javascript_include_tag 'jquery', 'jquery-ui'
    =javascript_include_tag 'jquery-ui-timepicker-addon'
    =javascript_include_tag 'best_in_place'
    =javascript_include_tag 'application'

    =csrf_meta_tag
  %body
    .notice
      =notice
    .alert
      =alert

    =render :partial => 'layouts/header.html.haml' if user_signed_in?

    .container
      =yield
