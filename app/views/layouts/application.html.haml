!!! XML
!!! strict
%html
  %head
    %title
      TimeTracker
    =stylesheet_link_tag 'styles'
    =stylesheet_link_tag 'print', :media => "print"

    =javascript_include_tag 'jquery-1.7.2.min.js'
    =javascript_include_tag 'jquery.utils.min'
    =javascript_include_tag 'jquery.ui.all'
    =javascript_include_tag 'dp'
    =javascript_include_tag 'application'

    =csrf_meta_tag
  %body
    .notice
      =notice
    .alert
      =alert

    =render :partial => 'layouts/header.html.haml' if user_signed_in?

    .container
      =yield
